@page "/recipes"
@inject IRecipeService RecipeService

<PageTitle>Recipe Repository</PageTitle>

<RecipeList />

<MudButton Variant="Variant.Filled" Color="Color.Primary" Href="../recipe/new">Add Recipe</MudButton>

@code {
    protected override async Task OnParametersSetAsync()
    {
        await RecipeService.GetRecipes();
    }
}